#!/bin/bash
set -euxo pipefail  # Safer script behavior

# Ensure we have all dependencies
sudo apt-get update
sudo apt-get install -y ca-certificates curl gnupg lsb-release

# Set up Dockerâ€™s GPG key
sudo install -m 0755 -d /etc/apt/keyrings
curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo gpg --dearmor -o /etc/apt/keyrings/docker.gpg
sudo chmod a+r /etc/apt/keyrings/docker.gpg

# Set up Docker repository
echo \
  "deb [arch="$(dpkg --print-architecture)" signed-by=/etc/apt/keyrings/docker.gpg] https://download.docker.com/linux/ubuntu \
  "$(. /etc/os-release && echo "$VERSION_CODENAME")" stable" | \
  sudo tee /etc/apt/sources.list.d/docker.list > /dev/null

# Install Docker
sudo apt update
sudo apt install docker-ce docker-ce-cli containerd.io docker-buildx-plugin docker-compose-plugin

# Add user to docker group
sudo usermod -aG docker $USER

# Enable and start Docker
sudo systemctl enable docker
sudo systemctl start docker

# Stop firewalld if it's installed
if systemctl list-unit-files | grep -q firewalld.service; then
  sudo systemctl stop firewalld || true
fi

# Change directory
cd /home/opc || cd ~

# Ensure Dockerfile exists
if [ -f Dockerfile ]; then
  sudo docker build -t webserver .
  sudo docker run -d -p 80:80 --name webserver webserver
else
  echo "No Dockerfile found in home directory. Skipping build and run."
fi